<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eventhorizonwebdesign.ladispute" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon"
        >
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TourActivity"
            android:label="@string/title_activity_tour"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LyricSorter"
            android:label="@string/title_activity_lyric_sorter"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LyricActivity"
            android:label="@string/title_activity_lyric"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MusicMainActivity"
            android:label="@string/title_activity_music_main"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
