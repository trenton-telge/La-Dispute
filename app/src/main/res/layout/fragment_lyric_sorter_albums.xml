<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eventhorizonwebdesign.ladispute.LyricSorter$PlaceholderFragment"
    android:background="@color/colorPrimary">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12pt" />

    <TextView
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:id="@+id/rightGradient"
        android:background="@drawable/tab_grad_right"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/section_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:id="@+id/leftGradient"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/section_label"
        android:background="@drawable/tab_grad_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:id="@+id/whiteBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/section_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lyricsExpList"
        android:layout_below="@+id/whiteBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:groupIndicator="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp" />

</RelativeLayout>
