<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eventhorizonwebdesign.ladispute.TourActivity"
    android:background="@color/colorPrimary">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:id="@+id/dropShadow"
        android:minHeight="8dp"
        android:src="@drawable/drop_shadow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/blank" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropShadow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rooms_of_the_house_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rooms"
        android:padding="4dp"
        android:minHeight="20dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vancouverAlbum"
            android:background="@drawable/rooms_of_the_house_bg"
            android:padding="4dp"
            android:contentDescription="@string/album_vancouver"
            android:layout_toLeftOf="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/satbotrbvaaAlbum"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/album_satbotrbvaa"
            android:background="@drawable/rooms_of_the_house_bg"
            android:padding="4dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wildlifeAlbum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:background="@drawable/rooms_of_the_house_bg"
            android:contentDescription="@string/album_wildlife"
            android:layout_below="@+id/vancouverAlbum"
            android:layout_toLeftOf="@+id/satbotrbvaaAlbum"
            android:layout_toStartOf="@+id/satbotrbvaaAlbum" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomsAlbum"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:background="@drawable/rooms_of_the_house_bg"
            android:contentDescription="@string/album_rooms"
            android:layout_alignTop="@+id/wildlifeAlbum"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/wildlifeAlbum" />
    </RelativeLayout>

</RelativeLayout>
